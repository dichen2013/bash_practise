#!/bin/bash
if [ ${1} = Eric ]; then
    echo "Hello Eric"
    echo "Hello Eric" >> greeting.log
elif [ ${1} = Amanda ]; then
    echo "Greeting professor Amanda"
    echo "Greeting professor Amanda" >> greeting.log
elif [ ${1} = Petter ]; then
    echo "Good day Petter"
    echo "Good day Petter">> greeting.log
else
    cat greeting.log
fi
